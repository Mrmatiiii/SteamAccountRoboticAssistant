{
	"manifest_version": 2,

	"name": "Steam Account Robotic Assistant",
	"short_name": "SARA",
	"description": "SARA combines different tools to interact with Steam and its peripherie.",
	"version": "0.22",
    "background": {
        "scripts": [
        	"plugins/jQuery/jquery-2.2.3.min.js", 
        	"plugins/Dexie/Dexie.min.js", 
        	"plugins/MomentJS/moment.min.js",
        	"plugins/randomColor/randomColor.js",
        	"plugins/validate/jquery.validate.min.js", 
        	"plugins/validate/jquery.validate.unobtrusive.min.js",
        	"plugins/jsSha/jsSha-1.6.min.js",
        	"js/background.js",
        	"js/confirmations_2fa.js",
        	"js/acceptTrades.js",
        	"js/database.js",
        	"js/mobileAuth.js", 
        	"js/mod_headers.js",
        	"hot-reload.js"
        ],
        "persistent": true 
    },

	"default_locale": "en",

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["plugins/jQuery/jquery-2.2.3.min.js"]
		},
		{
			"matches": [
				"*://steamcommunity.com/login*",
				"*://store.steampowered.com//login*",
				"*://store.steampowered.com//login/*",
				"*://store.steampowered.com/login*",
				"*://store.steampowered.com/login/*"
			],
			"css": ["css/steam_login.css"],
			"js": ["js/steam_login.start.js"],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://steamcommunity.com/login*",
				"*://store.steampowered.com//login*",
				"*://store.steampowered.com//login/*",
				"*://store.steampowered.com/login*",
				"*://store.steampowered.com/login/*"
			],
			"js": ["plugins/waitUntilExists/jquery.waitUntilExists.min.js", "js/steam_login.js", "plugins/jsSha/jsSha-1.6.min.js", "js/mobileAuth.js"]
		},
		{
			"matches": ["*://store.steampowered.com/*", "*://steamcommunity.com/saliengame/*", "*://steamcommunity.com/login/home/*"],
			"js": ["js/autoDiscoveryQueue.js"]
		},
		{
			"matches": [
				"*://steamcommunity.com/login*",
				"*://steamcommunity.com/id/*/stickers*",
				"*://steamcommunity.com/id/*/stickers/*",
				"*://steamcommunity.com/profiles/*/stickers*",
				"*://steamcommunity.com/profiles/*/stickers/*"
			],
			"js": ["js/craftStickerBadge.js"]
		},
		{
			"matches": ["*://store.steampowered.com/*"],
			"js": ["js/licenseBulkActivation.js"]
		},
		{
			"matches": ["*://store.steampowered.com/*"],
			"js": ["js/steamNomination.js"]
		},
		{
			"matches": [
				"*://steamcommunity.com/id/*/inventory/*", 
				"*://steamcommunity.com/profiles/*/inventory/*"],
			"css": ["css/inventory.css"]
		},
		{
			"matches": [
				"*://steamcommunity.com/id/*/inventory/*", 
				"*://steamcommunity.com/profiles/*/inventory/*"],
			"js": ["plugins/jQuery/jquery-2.2.3.min.js", "plugins/waitUntilExists/jquery.waitUntilExists.min.js", "js/inventory.js"]
		},
		{
			"matches": [
				"*://steamcommunity.com/profiles/*/badges",
				"*://steamcommunity.com/profiles/*/badges/",
				"*://steamcommunity.com/profiles/*/badges/2",
				"*://steamcommunity.com/profiles/*/badges/2/",
				"*://steamcommunity.com/id/*/badges",
				"*://steamcommunity.com/id/*/badges/",
				"*://steamcommunity.com/id/*/badges/2",
				"*://steamcommunity.com/id/*/badges/2/",
				"*://steamcommunity.com//chat/"
			],
			"js": ["js/badges.js"]
		}
	],

	"web_accessible_resources": [
		"js/webworkers.js"
	],

	"sandbox": {
		"pages": [
			"booster-template.html"
		]
	},

	"icons": {
		"16": "images/icon-16x16.png",
		"48": "images/icon-48x48.png",
   	   "128": "images/icon-128x128.png"
	},

	"browser_action": {
		"default_icon": "images/icon-128x128.png"
	},

	"permissions": [
		"cookies", "tabs", "alarms", "webRequest", "webRequestBlocking", "contextMenus", "<all_urls>", "storage"
	],

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
